pipeline {
    agent any

    environment {
        OUTPUT_FILE = "build_output.txt"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Cloning repository..."
                checkout scm
                echo "Current workspace: ${env.WORKSPACE}"
            }
        }

        stage('Build') {
            steps {
                echo "Running build script..."
                sh './hello.sh | tee $OUTPUT_FILE'
            }
        }

        stage('Archive Artifacts') {
            steps {
                echo "Archiving output file..."
                archiveArtifacts artifacts: "$OUTPUT_FILE", fingerprint: true
            }
        }

        stage('Summary') {
            steps {
                echo "Build completed for branch: ${env.BRANCH_NAME}"
                echo "Build number: ${env.BUILD_NUMBER}"
                echo "Workspace path: ${env.WORKSPACE}"
            }
        }
    }

    post {
        success {
            echo "Build SUCCESS!"
        }
        failure {
            echo "Build FAILED!"
        }
    }
}
